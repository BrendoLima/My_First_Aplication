<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Autor(a):"
        android:textColor="#2196F3"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text_nome_autor"
        app:layout_constraintTop_toTopOf="@+id/text_nome_autor" />

    <TextView
        android:id="@+id/text_nome_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_titulo_publicacao"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/text_publicacao_conteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/text_titulo_publicacao"
        app:layout_constraintStart_toStartOf="@+id/text_titulo_publicacao"
        app:layout_constraintTop_toBottomOf="@+id/text_titulo_publicacao" />
</androidx.constraintlayout.widget.ConstraintLayout>